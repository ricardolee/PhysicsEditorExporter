<?xml version="1.0"?>
<exporter>
  <name>cocos2d-x-lua-exporter</name>
  <displayName>Cocos2d-x Lua Exporter</displayName>
  <description>Exporter for gerneric cocos2d-x lua file.</description>
  <version>0.1</version>
  <yAxisDirection>up</yAxisDirection>
  <physicsEngine>generic</physicsEngine>
  <template>cocos2dx.lua</template>
  <fileExtension>lua</fileExtension>
  <anchorPoint>
    <enabled>no</enabled>
  </anchorPoint>
  <origin>
    <type>fixed</type>
    <relX>0.5</relX>
    <relY>0.5</relY>
  </origin>
  <global>
    <parameter>
      <name>m2pRatio</name>
      <displayName>Meter to Pixel Ratio</displayName>
      <type>float</type>
      <default>1.0</default>
    </parameter>
    <parameter>
      <name>gravity</name>
      <displayName>Gravity</displayName>
      <type>float</type>
      <default>9.8</default>
    </parameter>
  </global>
  <body>
    <parameter>
      <name>isDynamic</name>
      <displayName>Dynamic</displayName>
      <type>bool</type>
      <default>true</default>
    </parameter>
    <parameter>
      <name>isEnable</name>
      <displayName>Enable</displayName>
      <type>bool</type>
      <default>true</default>
    </parameter>
    <parameter>
      <name>isGravityEnable</name>
      <displayName>Gravity Enable</displayName>
      <type>bool</type>
      <default>true</default>
    </parameter>
  </body>
  <fixture>
    <parameter>
      <name>density</name>
      <displayName>Density</displayName>
      <type>float</type>
      <default>0</default>
    </parameter>
    <parameter>
      <name>friction</name>
      <displayName>Friction</displayName>
      <type>float</type>
      <default>0</default>
    </parameter>
    <parameter>
      <name>restitution</name>
      <displayName>Restitution</displayName>
      <type>float</type>
      <default>0</default>
    </parameter>
    <parameter>
      <name>group</name>
      <displayName>Group</displayName>
      <type>int</type>
      <default>0</default>
    </parameter>
    <parameter>
      <name>isEdge</name>
      <displayName>Edge</displayName>
      <type>bool</type>
      <default>false</default>
    </parameter>
    <parameter>
      <name>border</name>
      <displayName>Border</displayName>
      <type>float</type>
      <default>1</default>
    </parameter>
    <parameter>
      <name>bitfield</name>
      <displayName>Bits</displayName>
      <type>bitfield</type>
      <size>32</size>
    </parameter>
    <parameter>
      <name>categoryBitmask</name>
      <displayName>Category</displayName>
      <type>uint</type>
      <default>0</default>
      <bitfield>yes</bitfield>
    </parameter>
    <parameter>
      <name>collisionBitmask</name>
      <displayName>Collision</displayName>
      <type>uint</type>
      <default>0</default>
      <bitfield>yes</bitfield>
    </parameter>
    <parameter>
      <name>contactTestBitmask</name>
      <displayName>Contact Test</displayName>
      <type>uint</type>
      <default>0</default>
      <bitfield>yes</bitfield>
    </parameter>
  </fixture>
</exporter>
